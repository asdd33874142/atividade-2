#include <iostream>

int main() {
    // Variáveis para armazenar as notas do aluno
    double nota1, nota2, nota3, nota4;

    // Solicita ao usuário que insira as notas
    std::cout << "Insira a primeira nota: ";
    std::cin >> nota1;

    std::cout << "Insira a segunda nota: ";
    std::cin >> nota2;

    std::cout << "Insira a terceira nota: ";
    std::cin >> nota3;

    std::cout << "Insira a quarta nota: ";
    std::cin >> nota4;

    // Calcula a média das notas
    double media = (nota1 + nota2 + nota3 + nota4) / 4.0;

    // Exibe a média das notas
    std::cout << "A média das quatro notas é: " << media << std::endl;

    return 0;
}
